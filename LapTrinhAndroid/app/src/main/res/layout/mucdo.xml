<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#38b6FF"
        android:clickable="true">

        <ImageView
            android:id="@+id/nextbtn"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:src="@drawable/next"
            android:padding="10dp"
            android:layout_alignTop="@+id/Imglogo"
            android:forceHasOverlappingRendering="false"
            />

        <ImageView
            android:id="@+id/Imglogo"
            android:layout_width="307dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:alignParentTop="true"
            android:src="@drawable/hoasen"

            />



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imglogo"
            >

            <ImageView
                android:id="@+id/easy"
                android:layout_width="106dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10pt"
                android:layout_weight="1"
                android:src="@drawable/one" />

            <ImageView
                android:id="@+id/txteasy"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:src="@drawable/easy" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            >

            <ImageView
                android:id="@+id/medium"
                android:layout_width="222dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10pt"
                android:layout_weight="1"
                android:src="@drawable/hand" />
            <ImageView
                android:id="@+id/txtmedium"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:src="@drawable/medium" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            >

            <ImageView
                android:id="@+id/hard"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="10pt"
                android:layout_weight="1"
                android:src="@drawable/three" />

            <ImageView
                android:id="@+id/txthard"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:layout_toLeftof="@+id/img10"
                android:layout_weight="1"
                android:src="@drawable/hard" />



        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>